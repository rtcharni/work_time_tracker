{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@models": [
                "models"
            ],
            "@controllers": [
                "src/controllers"
            ],
            "@services": [
                "src/services"
            ],
            "@mockdata": [
                "src/mockdata"
            ],
            "*": [
                "node_modules/*"
            ],
        },
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*",
        "utils/constants.ts",
        "src/backendUtils/validation.ts"
    ],
}